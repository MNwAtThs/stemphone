# Multi-stage build for Stemphone Realtime Service

# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci --only=production && npm cache clean --force

# Copy source code
COPY src/ ./src/

# Build the application
RUN npm run build

# Production stage
FROM node:18-alpine AS production

# Create app user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S stemphone -u 1001

WORKDIR /app

# Copy built application
COPY --from=builder --chown=stemphone:nodejs /app/dist ./dist
COPY --from=builder --chown=stemphone:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=stemphone:nodejs /app/package*.json ./

# Create logs directory
RUN mkdir -p logs && chown stemphone:nodejs logs

# Switch to non-root user
USER stemphone

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3001/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start the application
CMD ["node", "dist/index.js"]

