{
    "name": "stemphone",
    "version": "0.1.0",
    "private": true,
    "description": "Stemphone monorepo - web app, shell app, and on-prem services",
    "workspaces": [
        "apps/*",
        "services/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:web\" \"npm run dev:realtime\"",
        "dev:web": "npm run dev --workspace=apps/web",
        "dev:shell": "npm run dev --workspace=apps/shell",
        "dev:realtime": "npm run dev --workspace=services/realtime",
        "build": "npm run build --workspaces",
        "build:web": "npm run build --workspace=apps/web",
        "build:shell": "npm run build --workspace=apps/shell",
        "build:realtime": "npm run build --workspace=services/realtime",
        "infra:up": "docker-compose -f infra/docker-compose.yml up -d",
        "infra:down": "docker-compose -f infra/docker-compose.yml down",
        "infra:logs": "docker-compose -f infra/docker-compose.yml logs -f"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "lucide-react": "^0.544.0"
    }
}
